body
  font-family "Helvetica Neue", Arial, sans-serif

.container
  margin 50px auto
  width 450px

.stats
  margin 20px auto

.replays
  margin-bottom 50px

.replay-info
  margin 10px 0
  font-size 14px

.replay-link
  color #111
  display flex
  font-size 14px
  padding 5px 0
  text-decoration none
  width 450px

  &:hover
    background #fafafa
    opacity 0.7

  &:visited
    color #999

  .player
    width 150px

  .rank
    text-align center
    width 50px

  .vs
    text-align center
    width 50px

  .player1
    text-align right

  .player2
    text-align left
